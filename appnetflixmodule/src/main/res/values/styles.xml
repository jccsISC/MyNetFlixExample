<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="tvStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/size_20</item>
        <item name="android:textColor">@color/gray_litte</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tvStyleHome" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/size_12</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:layout_marginEnd">12dp</item>
    </style>

    <style name="BtnDialog" parent="Widget.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
        <item name="background">@color/primary_color</item>
        <item name="android:textSize">@dimen/size_16</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:layout_marginEnd">25dp</item>
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorSurface">@android:color/transparent</item>
    </style>

    <style name="DetailsTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/shape_bottom_dialog_fragment</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/size_20</item>
        <item name="android:textColor">@color/color_primary_dark</item>
    </style>

    <style name="ProgressBarStyle">
        <item name="colorAccent">@color/dark_red</item>
    </style>

    <style name="ButtonPermission" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">15dp</item>
        <item name="textAllCaps">true</item>
        <item name="android:textSize">@dimen/size_16</item>
        <item name="backgroundTint">@color/color_primary_dark</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/dark_red</item>
    </style>
</resources>