<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/cardMovieShimmer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="120dp"
    android:layout_height="180dp"
    android:layout_marginHorizontal="5dp"
    app:cardBackgroundColor="@color/shimmer_color"
    android:foreground="?selectableItemBackgroundBorderless"
    app:cardCornerRadius="@dimen/corner_item_movie"
    app:cardElevation="@dimen/elevation_6">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.tistory.zladnrms.roundablelayout.RoundableLayout
            android:id="@+id/txtTitle"
            android:layout_width="0dp"
            android:layout_height="20dp"
            app:cornerRightSide="@dimen/corner_item_shimmer"
            app:cornerLeftSide="@dimen/corner_item_shimmer"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/shimmer_color_dark"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="See"/>

        <com.tistory.zladnrms.roundablelayout.RoundableLayout
            android:id="@+id/txtTexto"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/shimmer_color_dark"
            app:cornerRightSide="@dimen/corner_item_shimmer"
            app:cornerLeftSide="@dimen/corner_item_shimmer"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>